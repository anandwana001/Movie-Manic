<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    style="@style/CustomMatch"
    tools:context="and.com.moviemanic.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/thumbnail_det"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />
        <TextView
            android:id="@+id/title_det"
            style="@style/CustomText"
            android:textSize="@dimen/title_text"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/release_det"
            android:textSize="@dimen/othr_text"
            style="@style/CustomText" />
        <TextView
            android:id="@+id/vote_det"
            android:textSize="@dimen/othr_text"
            style="@style/CustomText" />
        <TextView
            android:id="@+id/overview_det"
            android:textSize="@dimen/othr_text"
            style="@style/CustomText" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/trailer_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/revuew_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/fav_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/like"
            android:textColor="@color/body_text_white"
            android:background="@color/colorPrimary"/>
    </LinearLayout>
</ScrollView>
